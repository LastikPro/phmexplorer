@model WebServer.Models.AuthorizationModel
@{
    ViewData["Title"] = "Авторизация";
    string dog = "@";
}

<link rel="stylesheet" href="~/css/Account/Authorization.css" />

<div id="main">
    <div class="container text-center">
        <img src="~/Img/LoginForm.jpg" width="400" height="800" style="margin-top:200px;">
        <div class="row" style="transform: translateY(-800px);">
            <div class="col HeaderText">
                <div class="row">
                    <div class="col">
                        <div style="font-size:30px;"> Авторизация</div>
                    </div>
                </div>
                <div class="row" style="margin-top: 60px;">
                    <div class="col ">
                        <div class="circle"></div>
                        <img id="circle" src="~/UserDefIcon.jpg" width="100" height="100">
                    </div>
                </div>
                <div class="row" style="margin-left:410px;margin-top: 60px;">
                    <div class="col-3 text-left" style="font-size:30px;">
                        Вход
                    </div>
                    <div class="col-2" style="font-size:20px;margin-top:10px;">
                        Регистрация
                    </div>
                </div>
                <div class="row selecktor" style="margin-left:400px;"></div>
                <div class="row Login" style="margin-top: 60px;margin-left:410px; ">
                    <div class="col">
                        <form asp-action="Login" asp-controller="Account" asp-anti-forgery="true" class="col-5 my-auto shadow p-3 mb-5 rounded">
                            <div class="response"></div>
                            <div class="form-group">
                                <input type="email" asp-for="Email" class="form-control" id="InputEmailL" placeholder="Введите Email" aria-describedby="emailHelp">
                            </div>
                            <div class="form-group">
                                <input asp-for="Password" type="password" placeholder="Введите пароль" class="form-control" id="InputPassword">
                            </div>
                            <button id="Button1" style="margin-right:75px;" class="btn btn-primary float-right">Подтвердить</button>
                        </form>
                    </div>
                </div>

                <div class="row Register" style="margin-top: 60px;margin-left:410px;display:none; ">
                    <div class="col">
                        <form asp-action="Register" asp-controller="Account" asp-anti-forgery="true" class="col-5 my-auto shadow p-3 mb-5 rounded">
                            <div class="response"></div>
                            <div class="form-group">
                                <input type="email" asp-for="Email" class="form-control" placeholder="Введите Email" id="InputEmail" aria-describedby="emailHelp">                               
                            </div>
                            <div class="form-group">
                                <input type="password" class="form-control" placeholder="Введите пароль" id="InputPassword1">
                            </div>
                            <div class="form-group">
                                <input type="password" class="form-control" placeholder="Повторите пароль" id="InputPassword2">
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" placeholder="Введите имя" id="InputName">
                            </div>
                            <div class="form-group">
                                <i class="form-group fa fa-image fa-2x"></i>
                                <div class="progress" id="pBar">
                                    <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100" style="width: 0%"></div>
                                </div>
                            </div>
                            <button id="Button2" style="margin-right:65px;" class="btn btn-primary float-right">Подтвердить</button>
                        </form>
                        <input class="form-group upImg" type="file" multiple accept="image/*" style=" opacity: 0;transform: translate(205px,-1000px);" />
                    </div>
                </div>

            </div>
        </div>
    </div>
    </div>

<script src="~/js/Account/Authorization.js"></script>


